script#statistics(type="text/template")
  .container.statistics
    .statistics-list
      .statistics-item(v-if="category !== 'group'") 参与人数
        strong {{ total.voters }}
      .statistics-item 报名人数
        strong {{ total.joiners }}
    .table-responsive
      table.table
        thead
          tr
            th 日期
            th(v-if="category !== 'group'") 参与人数
            th 报名人数
        tbody(v-if="list.length")
          tr(v-for="item in list")
            td {{ item.date }}
            td(v-if="category !== 'group'") {{ item.partake_count }}
            td {{ item.sign_up_count }}
        tbody(v-else)
          tr
            td(colspan="3") 暂无数据
